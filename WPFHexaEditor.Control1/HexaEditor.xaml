                      Header="Undo" 
                      Click="UndoCMenu_Click">
                <MenuItem.Icon>
                    <Image Height="25" Source="/WPFHexaEditor;component/Resources/Icon/Undo-Icon.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem Header="Bookmarks">
                <MenuItem x:Name="BookMarkCMenu" 
                          Header="Set bookmark" 
