                      Header="Paste without inserting" 
                      Click="PasteMenu_Click" >
                <MenuItem.Icon>
                    <Image Height="25" Source="/WPFHexaEditor;component/Resources/Icon/Paste-Icon.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem x:Name="FillByteCMenu" 
                      Header="Fill selection with byte..." 
